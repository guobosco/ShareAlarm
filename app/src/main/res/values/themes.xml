<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShareAlarm" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Window attributes -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        
        <!-- Basic color attributes -->
        <item name="android:colorPrimary">@color/bell_yellow</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorAccent">@color/bell_orange</item>
        <item name="android:colorBackground">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>
